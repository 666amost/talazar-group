# Environment variables for Vercel deployment
# Copy this content to your Vercel project environment variables

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app
NEXT_PUBLIC_BRANDS=puffy,lava,indomie

# Bank Transfer Details
BANK_NAME=BCA
BANK_ACCOUNT_NAME=PT Talazar Group
BANK_ACCOUNT_NUMBER=1234567890

# Vercel Postgres (will be auto-populated by Vercel)
POSTGRES_URL=
POSTGRES_URL_NON_POOLING=

# Vercel KV (will be auto-populated by Vercel)
KV_REST_API_URL=
KV_REST_API_TOKEN=

# Vercel Blob (will be auto-populated by Vercel)
BLOB_READ_WRITE_TOKEN=

# Email Service (optional - for notifications)
RESEND_API_KEY=

# WhatsApp API (optional - for notifications)
WAHATOKEN=

# Admin Panel (set secure credentials)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-password
